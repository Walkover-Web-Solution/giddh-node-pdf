    /* reset */
    * {
    border: 0;
    box-sizing: content-box;
    color: #262626;
    font-family: inherit;
    font-size: 10px;
    font-style: inherit;
    font-weight: inherit;
    line-height: inherit;
    list-style: none;
    margin: 0;
    padding: 0;
    text-decoration: none;
    vertical-align: top;
    }
    /* heading */
    header h1 {
    /* color: #df4927; */
    font-size: 14px;
    }
    header h2 {
    color: #df4927;
    font-size: 18px;
    }
    /* table */
    table {
    table-layout: fixed;
    width: 100%;
    border-collapse: inherit
    }
    .item th,
    tfoot tr th {
    background: #f2f2f2;
    border: 0;
    }
    /* page */
    html {
    overflow: auto;
    padding: 0;
    cursor: default;
    padding: 0;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    }
    body {
    box-sizing: border-box;
    margin: 0 auto;
    overflow: hidden;
    padding: 0.1in;
    letter-spacing: 0;
    width: 100%;
    }
    body {
    background: #FFF;
    border-radius: 1px;
    /* box-shadow: 0 0 1in -0.25in rgba(0, 0, 0, 0.5); */
    }
    /* header */
    header {
    margin: 0;
    background: #fff;
    padding: 0.23in 0.23in 0.03in
    }
    header:after {
    clear: both;
    content: "";
    display: table;
    }
    .pull-right tr td {
    text-align: right !important;
    }
    header .numDetail strong {
    width: 50px;
    float: left;
    }
    .meta {
    padding: 0 0.23in 0.03in;
    margin-bottom: 10px;
    }
    .meta tbody tr td,
    .meta tbody tr th {
    border: 0;
    padding: 5px 0;
    }
    .meta tbody tr th {
    background: none;
    border: 0;
    padding: 0;
    text-align: left;
    color: #262626;
    }
    .meta tbody tr td {
    padding: 7px 0;
    line-height: 1.3rem;
    }
    /*.meta tbody tr td:nth-child(2)>table tbody tr td{background: #f2f2f2;padding: 0 10px;line-height: 2rem;margin: 4px 0; display: -webkit-box;}*/
    header figure {
    float: left;
    font-style: normal;
    line-height: 1.25;
    margin: 0 0 0.3em 0;
    }
    header figure p {
    margin: 0 0 0.25em;
    }
    header span,
    header img {
    display: block;
    float: right;
    }
    header span {
    margin: 0 0 1em 1em;
    max-height: 25%;
    max-width: 60%;
    position: relative;
    }
    header img {
    max-height: 100%;
    max-width: 100%;
    }
    header table tr td {
    border: 0;
    padding: 4px 0;
    }
    /* article */
    article {
    margin-bottom: 10px;
    }
    article:after {
    clear: both;
    content: "";
    display: table;
    }
    article h1 {
    clip: rect(0 0 0 0);
    position: absolute;
    }
    article address {
    float: left;
    font-weight: bold;
    }
    .text-right {
    text-align: right;
    }
    /* table items */
    table.item {
    clear: both;
    width: 100%;
    table-layout: auto;
    }
    table.item th,
    table.item tfoot tr th {
    text-align: right;
    position: relative;
    padding: 14px 7px;
    line-height: 1.2rem;
    }
    table.item tr th:nth-child(2) {
    text-align: left;
    }
    table.item tfoot tr th {
    padding-right: 7px;
    }
    table.item tr th,
    table.item tfoot tr th {
    font-weight: bold;
    }
    table.item tfoot tr th {
    border-top: 1px solid rgba(89, 89, 89, 0.6);
    }
    table.item td {
    border-radius: 0;
    padding: 7px;
    border-top: 1px solid rgba(89, 89, 89, 0.6);
    text-align: right;
    line-height: 1.2rem;
    }
    table.item td p {
    color: #595959;
    }
    table.item td:nth-child(1) {
    width: 26%;
    }
    table.item td:nth-child(2) {
    width: 38%;
    text-align: left;
    }
    table.item td:nth-child(3) {
    text-align: right;
    width: 12%;
    }
    table.item td:nth-child(4) {
    text-align: right;
    width: 12%;
    }
    table.item td:nth-child(5) {
    text-align: right;
    width: 12%;
    }
    /* table balance */
    table.balance {
    width: 75%;
    float: right;
    margin: 0px 7px 40px;
    }
    table.balance th,
    table.balance td {
    width: 50%;
    text-align: right;
    padding: 4px;
    }
    /* aside */
    aside h1 {
    border: none;
    border-width: 0 0 1px;
    margin: 0 0 1em;
    }
    aside h1 {
    border-color: #999;
    border-bottom-style: solid;
    }
    /*footer*/
    footer {
    border-top: 2px solid #df4927;
    padding: 15px 0;
    margin: 8px 0 0;
    background: #fff;
    float: left;
    color: red;
    width: 100%;
    overflow: auto;
    }
    footer p {
      color: red;
    }
    aside {
    line-height: 1.5rem;
    }
    .subfooter {
    padding: 0 20px;
    }
    .subfooter hr {
    width: 100%;
    border-bottom: 1px solid #000;
    margin: 3px 0;
    }
    .subfooter h4 {
    font-size: 17px;
    color: #df4927;
    margin: 10px 0 0
    }
    @page {
    margin: 0;
    size: A4 portrait;
    }
    @media print {
    * {
    -webkit-print-color-adjust: exact;
    }
    {
    background: none;
    padding: 0;
    }
    body {
    box-shadow: none;
    margin: 0;
    }
    span:empty {
