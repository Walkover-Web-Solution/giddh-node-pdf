      .docTitle h2:after {
        content: attr(title);
        width: auto;
        position: relative;
        background: #fff;
        margin: 0 auto;
        padding: 0px 8px;
        right: 0;
        bottom: 9px;
        /* line-height: 40px; */
        vertical-align: middle;
        z-index: 0;
        left: 0;
      }
      p {
        margin: 0;
      }
      table.item th .bgClr {
        position: absolute;
        top: 0;
        bottom: 0;
        background: aqua;
        left: 0;
        right: 0;
        width: 100%;
        opacity: 0.05;
        z-index: 0;
      }
      .docTitle hr {
        position: absolute;
        height: 1px;
        top: 5px;
        width: 100%;
      }
      strong {
        font-weight: bold;
      }
